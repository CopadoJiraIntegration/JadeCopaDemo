<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <environments>Default</environments>
    <formulas>
        <description>To calculate the Approval time taken based on the difference of the time between the approval submitted and approved. Multiplied by 24 to convert it into hours</description>
        <name>ApprovalTimeTakenCategory</name>
        <dataType>String</dataType>
        <expression>IF(FLOOR(({!$Flow.CurrentDateTime} - {!$Record.CreatedDate})*24) &lt; 2, &apos;4&apos;,  IF(FLOOR(({!$Flow.CurrentDateTime} - {!$Record.CreatedDate})*24) &gt;= 2 &amp;&amp; FLOOR(({!$Flow.CurrentDateTime} - {!$Record.CreatedDate})*24) &lt; 4, &apos;3&apos;, IF(FLOOR(({!$Flow.CurrentDateTime} - {!$Record.CreatedDate})*24) &gt;= 4 &amp;&amp; FLOOR(({!$Flow.CurrentDateTime} - {!$Record.CreatedDate})*24) &lt;= 8, &apos;2&apos;, IF(FLOOR(({!$Flow.CurrentDateTime} - {!$Record.CreatedDate})*24) &gt; 8, &apos;1&apos;, NULL))))</expression>
    </formulas>
    <interviewLabel>Update Approved Rejected Revoked Date time on Approval Object {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Update Approved Rejected Revoked Date time on Approval Object</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Capture_Approved_Rejected_Revoked_Date_time_on_Approval</name>
        <label>Capture Approved Rejected Revoked Date time on Approval</label>
        <locationX>176</locationX>
        <locationY>311</locationY>
        <inputAssignments>
            <field>Approval_Time_Taken_Category__c</field>
            <value>
                <elementReference>ApprovalTimeTakenCategory</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Approved_Rejected_Revoked_Date__c</field>
            <value>
                <elementReference>$Flow.CurrentDateTime</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Capture_Approved_Rejected_Revoked_Date_time_on_Approval</targetReference>
        </connector>
        <filterLogic>1 AND 2 AND (3 OR 4 OR 5)</filterLogic>
        <filters>
            <field>sbaa__RecordField__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Quote__c</stringValue>
            </value>
        </filters>
        <filters>
            <field>sbaa__Status__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>sbaa__Status__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Approved</stringValue>
            </value>
        </filters>
        <filters>
            <field>sbaa__Status__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Rejected</stringValue>
            </value>
        </filters>
        <filters>
            <field>sbaa__Status__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Revoked</stringValue>
            </value>
        </filters>

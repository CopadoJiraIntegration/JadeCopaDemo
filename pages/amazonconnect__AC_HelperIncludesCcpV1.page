<apex:page id="AC_HelperIncludesCcpV1"
           showChat="false"
           showHeader="false"
           applyBodyTag="false"
           applyHtmlTag="false"
           sideBar="false">
    <html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" lang="en">
        <apex:slds />

        <style>
            #helperPanel {
                top: 36px;
                left: 6px;
                position: absolute;
                display: flex;
            }

            .helperItem {
                flex: none;
                margin: 2px;
                display: flex;
                justify-content: center;
                align-items: center;
                cursor: pointer;
            }

            #attributesPopover, #linksPopover, #voicemailDropsPopover {
                top: 72px;
                left: 6px;
                position: absolute;
                width: 95%;
                min-width: initial;
                max-height: 170px;
                display: flex;
                flex-direction: column;
            }

            .slds-scope .slds-table td,
            .slds-scope .slds-table th {
                padding: 0px;
            }
        </style>

        <div id="messageDialog" class="modal">
            <div class="modal-dialog" style="top: 25%;">
                <div class="modal-content" style="text-align: left;">
                    <div class="modal-body">
                        <div id="messageBody"></div>
                    </div>
                </div>
            </div>
        </div>

        <div id="helperPanel">
            <div id="voicemailDropsIndicator" class="helperItem slds-hide">
                <span class="slds-badge">
                    <span class="slds-badge__icon">
                        <span class="slds-icon_container">
                            <svg aria-hidden="true"
                                 class="slds-icon slds-icon_x-small slds-icon-text-default"
                                 xmlns="http://www.w3.org/2000/svg"
                                 xmlns:xlink="http://www.w3.org/1999/xlink">
                                <use xlink:href="/apexpages/slds/latest/assets/icons/utility-sprite/svg/symbols.svg#voicemail_drop"></use>
                            </svg>
                            <span class="slds-assistive-text">Voicemail Drops</span>
                        </span>
                    </span>
                </span>
            </div>
            <div id="attributesIndicator" class="helperItem slds-hide">
                <span class="slds-badge">
                    <span class="slds-badge__icon">
                        <span class="slds-icon_container">
                            <svg aria-hidden="true"
                                 class="slds-icon slds-icon_x-small slds-icon-text-default"
                                 xmlns="http://www.w3.org/2000/svg"
                                 xmlns:xlink="http://www.w3.org/1999/xlink">
                                <use xlink:href="/apexpages/slds/latest/assets/icons/utility-sprite/svg/symbols.svg#info"></use>
                            </svg>
                            <span class="slds-assistive-text">Attributes</span>
                        </span>
                    </span>
                </span>
            </div>
            <div id="linksIndicator" class="helperItem slds-hide">
                <span class="slds-badge">
                    <span class="slds-badge__icon">
                        <span class="slds-icon_container">
                            <svg aria-hidden="true"
                                 class="slds-icon slds-icon_x-small slds-icon-text-default"
                                 xmlns="http://www.w3.org/2000/svg"
                                 xmlns:xlink="http://www.w3.org/1999/xlink">
                                <use xlink:href="/apexpages/slds/latest/assets/icons/utility-sprite/svg/symbols.svg#link"></use>
                            </svg>
                            <span class="slds-assistive-text">Links</span>
                        </span>
                    </span>
                </span>
            </div>
        </div>

        <div id="voicemailDropsContainer">
            <section id="voicemailDropsPopover" class="helperPopover slds-popover slds-popover_medium slds-hide" role="dialog" aria-label="Voicemail Drops"
                     aria-describedby="voicemaildrops-body-id-1">
                <div class="slds-popover__body popover-content" id="voicemaildrops-body-id-1">
                    <h3 id="voicemaildrops-heading-id-3" class="slds-text-heading_small">Voicemail Drops</h3>
                    <table id="voicemailDropsTable" class="slds-table slds-table_striped">
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </section>
        </div>

        <div id="attributesContainer">
            <section id="attributesPopover" class="helperPopover slds-popover slds-popover_medium slds-hide" role="dialog" aria-label="Attributes"
                     aria-describedby="attributes-body-id-1">
                <div class="slds-popover__body popover-content" id="attributes-body-id-1">
                    <h3 id="attributes-heading-id-3" class="slds-text-heading_small">Attributes</h3>
                    <table id="attributesTable" class="slds-table slds-table_striped">
                        <thead>
                        <tr class="slds-text-title_caps">
                            <th scope="col">
                                <div class="slds-truncate">Key</div>
                            </th>
                            <th scope="col">
                                <div class="slds-truncate">Value</div>
                            </th>
                            <th>&nbsp;</th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </section>
        </div>

        <div id="linksContainer">
            <section id="linksPopover" class="helperPopover slds-popover slds-popover_medium slds-hide" role="dialog" aria-label="Links"
                     aria-describedby="links-body-id-1">
                <div class="slds-popover__body popover-content" id="links-body-id-1">
                    <h3 id="links-heading-id-3" class="slds-text-heading_small">Links</h3>
                    <table id="linksTable" class="slds-table slds-table_striped">
                        <thead>
                        <tr class="slds-text-title_caps">
                            <th scope="col">
                                <div class="slds-truncate">Key</div>
                            </th>
                            <th scope="col">
                                <div class="slds-truncate">Value</div>
                            </th>
                            <th>&nbsp;</th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </html>
</apex:page>
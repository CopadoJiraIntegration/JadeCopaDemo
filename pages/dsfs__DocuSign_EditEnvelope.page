           action="{!loadEnvelope}"
           showHeader="true"
           sidebar="false"
           tabStyle="dsfs__DocuSign_Status__c">
    <style type="text/css">
        :root {
            --search-icon: url({!$Resource.dsfs__SearchIcon});
            --arrow-drop-down: url({!$Resource.dsfs__ArrowDropDown});
            --delete: url({!$Resource.dsfs__Delete});
        }

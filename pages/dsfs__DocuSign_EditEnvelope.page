    <apex:stylesheet value="{!$Resource.dsfs__styles}"/>
    <apex:includeScript value="{!$Resource.dsfs__jquery}"/>
    <apex:includeScript value="{!$Resource.dsfs__jquery_ui}"/>
    <apex:includeScript value="{!$Resource.dsfs__modernizrjs}"/>
